<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/course_title_text_view"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrangemangsrubrik"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/course_date_text_view"
        android:layout_below="@id/course_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum: 22 jan 2015"
        />
    <TextView
        android:id="@+id/course_weekday_time_text_view"
        android:layout_below="@id/course_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tid: Må 16:00-18:00"
        />
    <TextView
        android:id="@+id/course_price_text_view"
        android:layout_below="@id/course_weekday_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pris: 100kr"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/moreInfoButton"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/course_price_text_view"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="+ Mer info"
        android:focusable="true"
        android:onClick="expandInfo"
        android:background="#ff408fff"
        android:textColor="#fff" />


    <RelativeLayout android:id="@+id/toolbar"
        android:layout_below="@id/course_price_text_view"
        android:layout_marginBottom="-50dip"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/course_period_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tid: To 20:00-21:15"
            />
        <TextView
            android:id="@+id/course_teacher_text_view"
            android:layout_below="@id/course_period_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lärare: Johan Johansson"
            />
        <TextView
            android:id="@+id/course_length_text_view"
            android:layout_below="@id/course_teacher_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antal veckor: 14"
            />
        <TextView
            android:id="@+id/course_vacancies_text_view"
            android:layout_below="@id/course_length_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platser kvar: 2"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/course_descripitionTitle_text_view"
            android:layout_below="@id/course_vacancies_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balett för vuxna"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/course_descripition_text_view"
            android:layout_below="@id/course_descripitionTitle_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beskrivning"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

</RelativeLayout>
